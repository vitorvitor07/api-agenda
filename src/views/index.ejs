<%- include('includes/head')%>
  <%- include('includes/nav')%>

    <div class="conteiner">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="display-3 text-center">Agenda</h1>
          <p class="text-center lead">Contatos:</p>
          
          <%- include('includes/messages')%>
          <% if (contatos.length > 0) { %>
          <div class="responsive-table">
            <table class="table my-3">
            <% contatos.forEach(contatos => { %>
              <tr>
                <td><%= contatos.nome%></td>
                <td><%= contatos.sobrenome%></td>
                <td><%= contatos.telefone%></td>
                <td><%= contatos.email%></td>
                <td><a href="/contato/index/<%= contatos._id %>">Editar</a></td>
                <td><a class="text-danger" href="/contato/delete/<%= contatos._id %>">Apagar</a></td>
              </tr>
            <% }) %>
            </table>
          </div>
          <% } else {%>
            <p class="text-center lead">Ainda n√£o existem contatos cadastrados</p>
          <% } %>  
        </div>


        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer')%>