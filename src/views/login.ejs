<%- include('includes/head')%>
  <%- include('includes/nav')%>

    <div class="conteiner">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta o Entrar</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
          
          <%- include('includes/messages') %>
          
          <div class="row">
            <div class="col-lg">
              <h4>Criar conta</h4>
              <p>Se ainda não possui uma conta, registre-se aqui</p>
              <form action="/login/register" method="post" class="form-registro">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label>Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>


                <div class="form-group">
                  <label>Senha senha</label>
                  <input type="password" class="form-control" name="password">
                </div>


                <button type="submit" class="btn btn-primary">Criar conta</button>
              </form>
            </div>

            <div class="col-lg">
              <h4>Entrar</h4>
              <p>Se você já possui uma conta, faça login abaixo</p>
              <form action="/login/login" method="post" class="form-login">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label>Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Senha senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
            </div>
          </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer')%>